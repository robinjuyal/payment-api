	</parent>
	<groupId>com</groupId>
	<artifactId>paymentApi</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>paymentApi</name>
	<description>payment API  </description>
	<url />
	<licenses>
		<license />
	</licenses>
	<developers>
		<developer />
